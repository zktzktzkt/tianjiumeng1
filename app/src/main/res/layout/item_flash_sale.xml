<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/gray_common"
    >

    <ImageView
        android:id="@+id/image_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:src="@drawable/pic_c"/>

    <com.yxk.tjm.tianjiumeng.custom.CenterTextView
        android:id="@+id/tv_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_pic"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="红酒玻璃杯单个装"
        android:textColor="@color/tabTextColor"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img_pic"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="￥299"
        android:textColor="@color/red_ff0000"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/tv_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_price"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_price"
        android:gravity="center"
        android:text="￥299"
        android:textColor="@color/tabTextColor"
        android:textSize="10dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/miaosha"
        />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/cv_countdownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        app:isHideTimeBackground="false"
        app:isShowDay="false"
        app:isShowHour="true"
        app:isShowMillisecond="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowTimeBgBorder="true"
        app:isShowTimeBgDivisionLine="false"
        app:suffixGravity="center"
        app:suffixLRMargin="2dp"
        app:suffixTextColor="@color/gray_444444"
        app:suffixTextSize="18sp"
        app:timeBgBorderColor="@color/gray_444444"
        app:timeBgBorderRadius="1dp"
        app:timeBgBorderSize="1dp"
        app:timeBgColor="@color/gray_444444"
        app:timeBgRadius="0dp"
        app:timeBgSize="18dp"
        app:timeTextColor="@color/white"
        app:timeTextSize="11sp"/>

</RelativeLayout>