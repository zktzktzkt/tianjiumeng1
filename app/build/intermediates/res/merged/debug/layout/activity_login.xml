<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1d23"
    android:orientation="vertical"
    tools:context="com.yxk.tjm.tianjiumeng.activity.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#201f25"
        app:navigationIcon="@drawable/iocn_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.yxk.tjm.tianjiumeng.custom.CircleImageView
            android:id="@+id/image_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/ic_launcher"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/image_head"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_round_login"
            android:drawableLeft="@drawable/shouji"
            android:drawablePadding="24dp"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:paddingLeft="24dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#898989"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/et_phone"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shape_round_login"
            android:drawableLeft="@drawable/mima"
            android:drawablePadding="24dp"
            android:gravity="center_vertical"
            android:hint="至少六位密码"
            android:paddingLeft="24dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#898989"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/et_pwd"
            android:layout_below="@+id/et_pwd"
            android:layout_marginTop="10dp"
            android:text="忘记密码?"
            android:textColor="#FFF"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/et_pwd"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/shape_red_round"
            android:gravity="center"
            android:text="登   录"
            android:textColor="#fff"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_regist"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/btn_login"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/shape_red_round_stroke"
            android:gravity="center"
            android:text="注   册"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </RelativeLayout>


</LinearLayout>
