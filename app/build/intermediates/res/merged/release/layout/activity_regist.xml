<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1d23"
    android:orientation="vertical"
    tools:context="com.yxk.tjm.tianjiumeng.activity.RegistActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#201f25"
        app:navigationIcon="@drawable/iocn_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/image_head"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="77dp"
            android:background="@drawable/shape_round_login"
            android:drawableLeft="@drawable/shouji"
            android:drawablePadding="24dp"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:paddingLeft="24dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#898989"
            android:textSize="14sp"/>

        <RelativeLayout
            android:id="@+id/relative_verifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_phone"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="11dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_round_login"
                android:drawableLeft="@drawable/yanzhengma"
                android:drawablePadding="24dp"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:paddingLeft="24dp"
                android:paddingRight="65dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#898989"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btn_get_verifi"
                android:layout_width="57dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_black_round"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="10sp"/>
        </RelativeLayout>


        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/relative_verifi"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shape_round_login"
            android:drawableLeft="@drawable/mima"
            android:drawablePadding="24dp"
            android:gravity="center_vertical"
            android:hint="请输入六位密码"
            android:paddingLeft="24dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#898989"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_regist"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/et_pwd"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/shape_red_round"
            android:gravity="center"
            android:text="注   册"
            android:textColor="#fff"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/btn_regist"
            android:layout_below="@id/btn_regist"
            android:layout_marginTop="15dp"
            android:text="我已同意天久梦协议"
            android:textColor="#898989"
            android:textSize="9sp"
            />

    </RelativeLayout>

</LinearLayout>
