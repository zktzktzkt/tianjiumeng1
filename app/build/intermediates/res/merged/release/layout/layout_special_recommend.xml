<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#28272f"
              android:orientation="horizontal"
              android:padding="2dp">

    <LinearLayout
        android:id="@+id/ll_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="珍品"
            android:textColor="#fff"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/pic_a"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="天然塑造 初春换新"
            android:textColor="#8a8a8a"
            android:textSize="9sp"
            />

    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#000"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/iv_pic_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pic_g"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="￥122"
            android:textColor="#fff"
            android:textSize="12dp"
            />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#000"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/iv_pic_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pic_e"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="￥122"
            android:textColor="#fff"
            android:textSize="12dp"
            />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#000"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/iv_pic_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pic_f"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="￥122"
            android:textColor="#fff"
            android:textSize="12dp"
            />
    </LinearLayout>


</LinearLayout>