<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1D23"
    tools:context="com.yxk.tjm.tianjiumeng.my.MyFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <com.yxk.tjm.tianjiumeng.custom.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/pic_a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="米大米"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="#28272F"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_chongzhi"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_quan"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="卡券包"
                android:textColor="@color/white"
                android:textSize="14sp"
                />


            <LinearLayout
                android:id="@+id/ll_crystal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="122"
                    android:textColor="@color/red_ff0000"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="水晶钻"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_commission"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="135"
                    android:textColor="@color/red_ff0000"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="佣金"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:background="#28272F"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="我的订单"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#32303C"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wait_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/act_daifukuan"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="待付款"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_wait_ship"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/act_daifahuo"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="待发货"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_wait_get"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/act_daishouhuo"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="待收货"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_appraise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/list_yongjin"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="待评价"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_sale_after"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/act_shouhou"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="售后"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_news"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="消息"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#32303C"
                />

            <TextView
                android:id="@+id/tv_collect"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_shoucang"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="我的收藏"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#32303C"
                />

            <TextView
                android:id="@+id/tv_my_custom"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_guanzhu"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="私人定制"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_return_money_detail"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_fanli"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="返利明细"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#32303C"
                />

            <TextView
                android:id="@+id/tv_commission_detail"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_yongjin"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="佣金明细"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#32303C"
                />

            <TextView
                android:id="@+id/tv_crystal_detail"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_zuan"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="水晶钻明细"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_share"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_fenxiang"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="分享"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#32303C"
                />

            <TextView
                android:id="@+id/tv_tjm_house"
                style="@style/my_text"
                android:drawableLeft="@drawable/list_tianjiu"
                android:drawablePadding="19dp"
                android:paddingLeft="32dp"
                android:text="天久梦之家"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_setting"
            style="@style/my_text"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/list_shezhi"
            android:drawablePadding="19dp"
            android:paddingLeft="32dp"
            android:text="设置"
            android:textSize="14sp"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>




